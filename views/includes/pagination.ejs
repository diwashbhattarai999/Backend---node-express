<section class="pagination">
  <a class="btn <%= currentPage === 1 ? 'disabled' : '' %>" href="?page=1">&laquo;</a>
  <a class="btn prevBtn <%= currentPage > 1 ? '' : 'disabled' %>" href="?page=<%= currentPage - 1 %>">&lt;</a>

  <% const pagesToShow = 5; %>
  <% const startPage = Math.max(1, currentPage - Math.floor(pagesToShow / 2)); %>
  <% const endPage = Math.min(totalPages, startPage + pagesToShow - 1); %>

  <% for (let pageNumber = startPage; pageNumber <= endPage; pageNumber++) { %>
  <a class="btn <%= currentPage === pageNumber ? 'active' : '' %>" href="?page=<%= pageNumber %>"><%= pageNumber %></a>
  <% } %>

  <a class="btn nextBtn <%= currentPage < totalPages ? '' : 'disabled' %>" href="?page=<%= currentPage + 1 %>">&gt;</a>
  <a class="btn <%= currentPage === totalPages ? 'disabled' : '' %>" href="?page=<%= totalPages %>">&raquo;</a>
</section>